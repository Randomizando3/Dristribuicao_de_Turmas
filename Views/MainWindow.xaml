<Window x:Class="DistribuicaoTurmas.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Distribuição de Turmas — Protótipo"
        Height="640" Width="1040"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BgBrush}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Background="#223157">
            <StackPanel Margin="16">
                <TextBlock Foreground="White" FontWeight="Bold" FontSize="18"
                           Text="Distribuição de Turmas" Margin="0,8,0,16"/>

                <!-- Navegação: usa o estilo NavToggleButton -->
                <ToggleButton Style="{StaticResource NavToggleButton}"
              Tag="&#xE80F;" Content="Salas"
              Command="{Binding GoRoomsCommand}"
              IsChecked="{Binding IsRoomsActive, Mode=TwoWay}" />

                <ToggleButton Style="{StaticResource NavToggleButton}"
              Tag="&#xE716;" Content="Turmas"
              Command="{Binding GoClassesCommand}"
              IsChecked="{Binding IsClassesActive, Mode=TwoWay}" />

                <ToggleButton Style="{StaticResource NavToggleButton}"
              Tag="&#xE8FD;" Content="Distribuições"
              Command="{Binding GoDistributionCommand}"
              IsChecked="{Binding IsDistributionsActive, Mode=TwoWay}" />

                <Separator Margin="0,16,0,16" Background="#FFFFFF22"/>

                            <TextBlock Foreground="#E5E7EB" TextWrapping="Wrap"
                           Text="As alterações em Salas e Turmas são salvas automaticamente."/>
            </StackPanel>
        </Border>

        <!-- Conteúdo em cards -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Style="{StaticResource Card}" Grid.Row="0" Padding="20" Margin="16,16,16,0">
                    <TextBlock Style="{StaticResource H1}" Text="Painel"/>
                </Border>

                <!-- Página ativa -->
                <Border Style="{StaticResource Card}" Grid.Row="1" Margin="16">
                    <ContentControl Content="{Binding CurrentView}"/>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
